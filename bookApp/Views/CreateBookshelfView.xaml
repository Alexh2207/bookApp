<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bookApp.Views.CreateBookshelfView">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="Name" Placeholder="ISBN of the book" />
            <Entry x:Name="Concept" Placeholder="Title of the book" />
            <Button x:Name="AddBookshelf" Text="Add Bookshelf" Clicked="OnAddNewBookShelf"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>